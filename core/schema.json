      },
      "keywords": {
        "title": "Keywords",
        "type": "array",
        "items": {
            "type":"string",
            "enum": ["kw1","kw2"]
        }
      },
      "category": {
        "title": "Category",
        "type": "string"
      },
      "domain": {
        "title": "Domain",
        "type": "string"
      }
    }
  }