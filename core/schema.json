{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "general":{
        "type":"object",
        "title": "General",
        "properties": {
          "title": {
            "title": "Service name",
            "type": "string",
            "required": true
          },
          "summary": {
            "title": "Summary",
            "description": "A sample description of the service",
            "type": "string"
          },
          "function": {
            "title": "Function/Task",
            "description": "The main function/task of the service",
            "type": "string",
            "enum": ["xx","yy"]
          },
          "keywords": {
            "title": "Keywords",
            "type": "array",
            "items": {
                "type":"string",
                "enum": ["kw1","kw2"]
            }
          },
          "category": {
            "title": "Category",
            "type": "array",
            "items": {
                "type":"string",
                "enum": [
                  "Data Analysis",
                  "Data Representation and Visualization",
                  "Data Processing",
                  "Digital Fabrication",
                  "Query and Data Extraction",
                  "Analytics and Descriptive Statistics",
                  "Remote Monitoring",
                  "Data Curation and Preservation",
                  "Documentation",
                  "Electronic Devices Prototyping and Development"
                ]
            }
          },
          "domain": {
            "title": "Research domain",
            "type": "string"
          },
          "website": {
            "title": "Website",
            "description": "Main reference website (if present). This is NOT the access point of the service",
            "type": "string"
          }
        }
      },

      "provider":{
        "type":"object",
        "title": "Provider",
        "properties": {
          "RI": {
            "type": "string",
            "title": "Research Infrastructure",
            "required": true,
            "enum": ["CLARIN","DARIAH","E-RIHS","OPERAS"]
          },
          "contact": {
            "title": "Contact Team",
            "type": "array",
            "items": {
                "type":"string"
            }
          }
        }
      }

    }
  }